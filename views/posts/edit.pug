form(action='/admin/posts/' + post.id, method='POST')
  input(type='hidden', name='_method', value='PUT')
  .form-group
    label Post Title:
    input.form-control(type='text', name='title', value=post.title)
  .form-group
    label Post Slug:
    input.form-control(type='text', name='slug', value=post.slug)
  .form-group
    label Post Slug:
    textarea.form-control(rows='20', name='content' value=post.content)
  .form-group.text-xs-right
    button.btn.btn-success.btn-lg(type='submit') Create blog post
